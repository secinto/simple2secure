{
  "$schema": "http://json-schema.org/schema#",
  "title": "JSON Query Message",
  "type": "object",
  "properties": {
    "requestFrequency": {
        "description": "Frequency to run these requests with",
        "type": "string"
    },
    "reportGeneration": {
        "description": "When to send Report back",
        "type": "string"
    },
    "queryRun": {
        "description": "The actual QueryRun",
        "type": "array",
        "items": {
            "title": "Query Run",
            "type": "object",
            "properties": {
                "id": {
                    "description": "The unique identifier for a query string",
                    "type": "string"
        },
                "querystring": {
                    "description": "The string for a query",
                    "type": "string"
        },
                "timestamp": {
                    "description": "The timestamp for the query run",
                    "type": "string"
        },
                "queryresult": {
                    "description": "The result of the query",
                    "type": "string"
        }
    },
    "required": ["id", "querystring"]
  }
  }  
  }
  }